<div class="container">
	<div class="form-custom"><%= form_for @place do |f| %>
    <div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
    <div class="form-group">
			<%= f.label :country %>
			<%= f.text_field :country, class: "form-control" %>
		</div>
    <div class="form-group">
			<%= f.label :description %>
			<%= f.text_area :description, class: "form-control" %>
		</div>	
    <div class="form-group">
			<%= f.label :languages %>
			<%= f.text_field :languages, class: "form-control" %>
		</div>		
    <div class="form-group">
			<%= f.label :timezone %>
			<%= f.time_zone_select :timezone %>
		</div>		
    <div class="form-group">
			<%= f.label :region_id, 'Regions' %>
			<%= f.collection_select :region_id, Region.all, :id, :name, class: "form-control input-sm" %>
		</div>	

      <div class="form-group">
      <%= f.label :attraction_id, 'Attractions' %>
      <%= f.collection_select :attraction_id, Attraction.all, :id, :attraction_name, class: "form-control input-sm" %>
    </div>  

    <div class="form-group">
			<%= f.label :url, 'Image Url' %>
			<%= f.text_field :url, class: "form-control" %>
		</div>
    <div class="form-group">
			<%= f.submit class: "btn btn-primary" %>
		</div>					
		<% end %>
	</div>
</div>