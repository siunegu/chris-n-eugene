
<div class="container">
	<div class="row">
		<h2><%= @place.name %></h2>
		<h4>Country: <%= @place.country %></h4>
		<h4>Main Language: <%= @place.languages %></h4>
		<p>Timezone: <%= @place.timezone %></p>
		<p><%= @place.description %></p>
	</div>
	<hr>
	<div class="row">
		<div class="photo-wrapper">
			<div class="photos">
				<% @photos.each do |photo| %>
				<div class="img">
					<%= image_tag(photo) %>
					<div class="overlay">
						<%= link_to "+", root_path, class: "expand" %>
						<a class="close-overlay hidden">x</a>
					</div>
				</div>
				<% end %>
			</div>
		</div>
	</div>
</div>

